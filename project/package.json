  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "bun-types": "1.3.5",
    "eslint": "9.39.2",
    "prettier": "3.7.4",
    "typescript": "5.5.4"
  }
}
