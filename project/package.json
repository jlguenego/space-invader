{
  "name": "space-invaders-mvp",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "build": "bun run scripts/build.ts",
